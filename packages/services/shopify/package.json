{
  "name": "@pkg/services-shopify",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "codegen": "dotenv -e ../../../.env.local -- graphql-codegen --config codegen.ts",
    "dev:types": "tsc -w --noEmit",
    "dev:bundle": "tsup --watch",
    "dev": "npm run dev:types & npm run dev:bundle",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist && rm -rf node_modules"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@types/node": "^20.0.0",
    "dotenv-cli": "^7.4.2",
    "jest-axe": "^10.0.0",
    "tsup": "^8.3.5",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "graphql": ">=16.11.0",
    "next": ">=15.0.0"
  }
}
